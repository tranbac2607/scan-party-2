{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version: "ES5", "ES6", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", or "ESNext".
    "module": "commonjs", // Specify module code generation: "none", "commonjs", "amd", "system", "umd", "es2015", or "ESNext".
    "rootDir": "./src", // Specify the root directory of input files.
    "outDir": "./dist", // Redirect output structure to the directory.
    "strict": true, // Enable all strict type-checking options.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via the `__importStar` and `__importDefault` helpers.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    } // Disallow inconsistently-cased references to the same file.
  },

  "include": ["src"], // Specify an array of filenames or patterns to include in the program.
  "exclude": ["node_modules"] // Specify an array of filenames or patterns to exclude from the program.
}
